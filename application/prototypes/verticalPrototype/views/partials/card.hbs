<div id="product-{{id}}" class="card">
    <img class="card-image" src="{{thumbnail}}" alt="Missing Image">
    <div class="card-body">
        <p class="card-title"> {{title}}</p>
        <p class="card-text">{{price}}</p>
        <a href="/product/{{id}}" class="anchor-buttons">Product Details</a>
    </div>
</div>