<main class="registration-content">
    <div class="container">
        <h2>Registration Form</h2>
        <form id="register" class="form" method="post" action="/users/registration" method="POST"
            enctype="application/x-www-form-urlencoded">
            <div class="input-group">
                <label for="name">Enter name</label>
                <input class="input-text" type="text" name="name" id="name" {{!required}}
                    placeholder="Enter here" {{!onkeyup="validation()"}}>
                <small></small>
            </div>

            <div class="input-group">
                <label for="password">Create Password</label>
                <input class="input-text" type="password" name="password" id="password" {{!required}}
                    placeholder="Password" {{!onkeyup="validation()"}}>
                <small></small>
            </div>

            <div class="input-group">
                <label for="confirm-password">Confirm Password</label>
                <input class="input-text" type="password" name="confirm-password" id="confirm-password" {{!required}}
                    placeholder="Confirm Password" {{!onkeyup="validation()"}}>
                <small></small>
            </div>

            <div class="input-group">
                <label for="email">Enter email</label>
                <input class="input-text" type="email" name="email" id="email" {{!required}} placeholder="Enter here"
                    {{!onkeyup="validation()"}}>
            </div>

            <div class="checkbox">
                <label for="ageOfConsent">Yes, I am 13+</label>
                <input type="checkbox" name="ageOfConsent" id="ageOfConsent" {{!required}}>
            </div>

            <div class="checkbox">
                <label for="TOS">Agree to the</label>
                <a target="_blank" href="#">
                    TOS & Privacy rules
                </a>
                <input type="checkbox" name="TOS" id="TOS" {{!required}}>
            </div>

            <input type="submit" value="create-account">
            <div id="error"></div>
        </form>
    </div>
</main>